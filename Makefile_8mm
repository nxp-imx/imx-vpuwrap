PROGRAM=test_dec_arm_elinux
ENC_PROGRAM=test_enc_arm_elinux
#ENC_AUTO_TEST=enc_auto_test
LIBRARY=./release/lib/lib_vpu_wrapper
SQLITE_LIBRARY=./sqlite/libsqlite3

CC ?= gcc
LN ?= $(CC)
AS ?= as
AR ?= =ar


CFLAGS= -O2 -Wall
INCLUDES= -I. -I$(SDKTARGETSYSROOT)/usr/include/hantro_dec -I$(SDKTARGETSYSROOT)/usr/include/hantro_enc -I/opt/fsl-imx-internal-xwayland/4.19-thud/sysroots/aarch64-poky-linux/usr/include -I/usr/include -I./sqlite

AFLAGS=

LFLAGS=-lfslvpuwrap -lcodec -lhantro -lcodec_enc -lhantro_h1


#CFLAGS+=-DUSE_VPU_WRAPPER_TIMER
#CFLAGS+=-DVPU_WRAPPER_DEBUG
CFLAGS+=-DDEC_STREAM_DEBUG
CFLAGS+=-DENC_STREAM_DEBUG
CFLAGS+=-DAPP_DEBUG
CFLAGS+=-DFB_RENDER_DEBUG
CFLAGS+= -DSET_OUTPUT_CROP_RECT -DUSE_EXTERNAL_BUFFER -DVSI_API -DENABLE_CODEC_VP8
CFLAGS+= -DENCH1 -DOMX_ENCODER_VIDEO_DOMAIN -DENABLE_HANTRO_ENC
CFLAGS+= -DUSE_IMX8MM


LIB_OBJS=vpu_wrapper_hantro.o vpu_wrapper_timer.o
LIB_OBJS +=utils.o
APP_OBJS=test_dec_arm_elinux.o decode_stream.o
APP_OBJS+=fb_render.o

ENC_APP_OBJS=test_enc_arm_elinux.o encode_stream.o vpu_wrapper_hantro_encoder.o
#ENC_AUTO_OBJS=enc_auto_test.o encode_stream.o decode_stream.o fb_render.o sqlite_wrapper.o


all: EXE ENC_EXE
	@echo "--- Build-all done for vpu wrapper ---"

LIBRARY: $(LIB_OBJS)
	mkdir -p ./release/lib
	$(AR) -r $(LIBRARY).a $(LIB_OBJS)
	$(LN) -o $(LIBRARY).so --shared -fpic $(LIB_OBJS)
	#$(LN) -o $(LIBRARY).so -shared -nostartfiles $(LIB_OBJS)

EXE: $(APP_OBJS) LIBRARY
	$(LN) -o $(PROGRAM) $(LFLAGS) $(APP_OBJS) $(LIBRARY).a

ENC_EXE: $(ENC_APP_OBJS) LIBRARY
	$(LN) -o $(ENC_PROGRAM) $(LFLAGS) $(ENC_APP_OBJS) $(LIBRARY).a

#ENC_AUTO_TEST: $(ENC_AUTO_OBJS) LIBRARY
#    $(LN) -o $(ENC_AUTO_TEST) $(LFLAGS) $(ENC_AUTO_OBJS) $(LIBRARY).a $(SQLITE_LIBRARY).a

%.o: %.c
	#$(CC) $(CFLAGS) $(INCLUDES)  -c  -o $@ $<
	$(CC) -fPIC $(CFLAGS) $(INCLUDES)  -c  -o $@ $<
	

clean:
	rm -rf $(LIB_OBJS)
	rm -rf $(APP_OBJS)	
	rm -rf $(ENC_APP_OBJS)
	rm -rf $(ENC_AUTO_OBJS)
	rm -rf $(LIBRARY).a
	rm -rf $(LIBRARY).so
	rm -rf $(PROGRAM)
	rm -rf $(ENC_PROGRAM)	

	
